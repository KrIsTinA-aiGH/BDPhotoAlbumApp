<Window x:Class="PhotoAlbumApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фотоальбом" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ПАНЕЛЬ ПОИСКА И ФИЛЬТРАЦИИ -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
            <TextBlock Text="Категория:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryComboBox" Height="25" 
                      SelectionChanged="CategoryComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Поиск:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="SearchTextBox" Height="25" 
                     TextChanged="SearchTextBox_TextChanged"/>
        </StackPanel>

        <!-- СПИСОК ФОТОГРАФИЙ -->
        <Border Grid.Column="0" Grid.Row="1" Margin="5" 
                BorderBrush="LightGray" BorderThickness="1">
            <ListBox x:Name="PhotosListBox" 
                     SelectionChanged="PhotosListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Image Width="50" Height="50" Stretch="UniformToFill"/>
                            <TextBlock Text="{Binding Title}" Margin="10,0,0,0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- КНОПКИ -->
        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="5">
            <Button x:Name="AddButton" Content="Добавить" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="80" Height="30" 
                    Click="DeleteButton_Click"/>
        </StackPanel>

        <!-- ОБЛАСТЬ ПРОСМОТРА ФОТОГРАФИИ -->
        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Margin="10" 
                BorderBrush="LightGray" BorderThickness="1">
            <ScrollViewer>
                <StackPanel x:Name="PhotoDetailsPanel" Visibility="Collapsed">

                    <!-- Название фото -->
                    <TextBlock x:Name="PhotoTitleText" FontSize="18" FontWeight="Bold" 
                               Margin="10,10,10,5"/>

                    <!-- Изображение -->
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="10" 
                            HorizontalAlignment="Left">
                        <Image x:Name="PhotoImage" MaxWidth="500" MaxHeight="400" 
                               Stretch="Uniform"/>
                    </Border>

                    <!-- Описание -->
                    <TextBlock Text="Описание:" FontWeight="Bold" Margin="10,10,10,5"/>
                    <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" 
                               Margin="10,0,10,10"/>

                    <!-- Теги -->
                    <TextBlock Text="Теги:" FontWeight="Bold" Margin="10,10,10,5"/>
                    <TextBlock x:Name="TagsText" TextWrapping="Wrap" 
                               Margin="10,0,10,10"/>

                    <!-- Категория -->
                    <TextBlock Text="Категория:" FontWeight="Bold" Margin="10,10,10,5"/>
                    <TextBlock x:Name="CategoryText" Margin="10,0,10,10"/>

                    <!-- Дата создания -->
                    <TextBlock Text="Дата добавления:" FontWeight="Bold" 
                               Margin="10,10,10,5"/>
                    <TextBlock x:Name="CreatedDateText" Margin="10,0,10,10"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Текст когда фото не выбрано -->
        <TextBlock Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" 
                   Text="Выберите фотографию для просмотра" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="16" Foreground="Gray"/>
    </Grid>
</Window>