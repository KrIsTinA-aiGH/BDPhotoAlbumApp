<Window x:Class="PhotoAlbumApp.AddEditPhotoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить фотографию" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Название фото -->
        <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" 
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                 Height="25" Margin="0,0,0,10"/>

        <!-- Путь к файлу -->
        <TextBlock Text="Файл:" Grid.Row="1" Grid.Column="0" 
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="FilePathTextBox" Grid.Row="1" Grid.Column="1" 
                 Height="25" Margin="0,0,10,10" IsReadOnly="True"/>
        <Button x:Name="BrowseButton" Grid.Row="1" Grid.Column="2" 
                Content="Обзор..." Width="70" Height="25" Margin="0,0,0,10"
                Click="BrowseButton_Click"/>

        <!-- Предпросмотр -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                BorderBrush="LightGray" BorderThickness="1" 
                Height="150" Margin="0,0,0,10">
            <Image x:Name="PreviewImage" Stretch="Uniform"/>
        </Border>

        <!-- Категория -->
        <TextBlock Text="Категория:" Grid.Row="3" Grid.Column="0" 
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                  Height="25" Margin="0,0,0,10"
                  DisplayMemberPath="Name" SelectedValuePath="CategoryId"/>

        <!-- Описание -->
        <TextBlock Text="Описание:" Grid.Row="4" Grid.Column="0" 
                   VerticalAlignment="Top" Margin="0,0,10,10"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                 Height="60" Margin="0,0,0,10" TextWrapping="Wrap"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <!-- Теги -->
        <TextBlock Text="Теги:" Grid.Row="5" Grid.Column="0" 
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="TagsTextBox" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
                 Height="25" Margin="0,0,0,10"
                 ToolTip="Введите теги через запятую (например: лето, отпуск, море)"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="80" Height="30" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>